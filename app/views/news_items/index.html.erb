<div class="center"><%= link_to 'Add News item', new_news_item_path, class: "btn btn-primary btn-sm" %></div>
<% @news_items.each do |news_item| %>
  <h1><%= news_item.title %></h1>
  <div><%= news_item.body.html_safe %></div>
  <div class="updated-at">Last updated <%= localize news_item.updated_at, format: :long %></div>
  <div class="edit-links"><%= link_to 'Show', news_item, class: "btn btn-success btn-xs" %> | 
    <%= link_to 'Edit', edit_news_item_path(news_item), class: "btn btn-warning btn-xs" %> | 
    <%= link_to 'Destroy', news_item, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %>
  </div> 
<% end %>