<%= form_for(@player) do |f| %>
  <% if @player.errors.any? %>
    <div class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@player.errors.count, "error") %> prohibited this player from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @player.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <fieldset>
    <div class="field">
      <%= f.label :firstname %><br>
      <%= f.text_field :firstname, class: "form-control" %>
    </div>
    <div class="field">
      <%= f.label :surname %><br>
      <%= f.text_field :surname, class: "form-control" %>
    </div>
    <div class="field">
      <%= f.label :position %><br>
      <%= f.select :position, Player::POSITIONS, prompt: 'Select a position', class: "form-control" %>
    </div>
    <div class="field">
      <%= f.label :bio %><br>
      <%= f.text_area :bio, class: "form-control wysihtml5" %>
    </div>
    <div class="actions">
      <%= f.submit class: "btn btn-success btn-sm" %>
    </div>
  </fieldset>
<% end %>
