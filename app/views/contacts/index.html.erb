<% content_for :title, "Contact Us" %>

<%= form_for(@contact) do |f| %>
  <% if @contact.errors.any? %>
    <div class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @contact.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="field" style="width: 100%;">
    <%= f.label :from_name %><br>
    <%= f.text_field :from_name, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :from_email %><br>
    <%= f.text_field :from_email, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :message %><br>
    <%= f.text_area :message, class: "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit "Send Email", class: "btn btn-success btn-sm" %>
  </div>
<% end %>
