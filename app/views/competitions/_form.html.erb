<%= form_for(@competition) do |f| %>
  <% if @competition.errors.any? %>
    <div class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@competition.errors.count, "error") %> prohibited this competition from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @competition.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <fieldset>
    <legend>Add/Edit Competition</legend>
    <div class="field">
