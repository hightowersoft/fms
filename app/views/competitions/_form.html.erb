    <div class="field">
      <%= f.label :is_league %><br>
      <%= f.check_box :is_league, class: "form-control" %>
    </div>
    <div class="actions">
      <%= f.submit class: "btn btn-success btn-sm" %>
    </div>
</fieldset>
<% end %>
